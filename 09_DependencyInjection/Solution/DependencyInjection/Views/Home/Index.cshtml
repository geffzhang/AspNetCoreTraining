@{
    ViewData["Title"] = "Home Page";
}
@model  string

@using DependencyInjection.Services

@inject ISampleTransient sampleTransient
@inject ISampleScoped sampleScoped
@inject ISampleSingleton sampleSingleton
@inject SampleService sampleService

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">


<table>
    <colgroup>
        <col width="100" />
    </colgroup>
    <tbody>
        <tr><th colspan="2">Controler</th></tr>
        @Html.Raw(Model)

        <tr><th colspan="2">Service</th></tr>
        <tr><td>Transient</td><td>@sampleService.SampleTransient.GetNumber()</td></tr>
        <tr><td>Scoped</td><td>@sampleService.SampleScoped.GetNumber()</td></tr>
        <tr><td>Singleton</td><td>@sampleService.SampleSingleton.GetNumber()</td></tr>

        <tr><th colspan="2">View</th></tr>
        <tr><td>Transient</td><td>@sampleTransient.GetNumber()</td></tr>
        <tr><td>Scoped</td><td>@sampleScoped.GetNumber()</td></tr>
        <tr><td>Singleton</td><td>@sampleSingleton.GetNumber()</td></tr>
    </tbody>
</table>
</div>
